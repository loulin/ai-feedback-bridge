{
  "name": "ai-feedback-bridge",
  "displayName": "AI Feedback Bridge",
  "description": "Bridge between AI clients and VSCode for interactive feedback and real-time collaboration",
  "version": "1.0.0",
  "publisher": "loulin",
  "icon": "media/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/loulin/ai-feedback-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/loulin/ai-feedback-bridge/issues"
  },
  "homepage": "https://github.com/loulin/ai-feedback-bridge#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "feedback",
    "interaction",
    "assistant",
    "bridge",
    "cursor",
    "trae",
    "lingma"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpExtension.start",
        "title": "Start MCP Server",
        "category": "AI Bridge"
      },
      {
        "command": "mcpExtension.stop",
        "title": "Stop MCP Server",
        "category": "AI Bridge"
      },
      {
        "command": "mcpExtension.openPanel",
        "title": "Open AI Bridge Panel",
        "category": "AI Bridge"
      },
      {
        "command": "mcpExtension.restart",
        "title": "Restart MCP Server",
        "category": "AI Bridge"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpContainer",
          "title": "AI Feedback Bridge",
          "icon": "$(plug)"
        }
      ]
    },
    "views": {
      "mcpContainer": [
        {
          "id": "mcpPanel",
          "name": "AI Interactive Panel",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "AI Feedback Bridge",
      "properties": {
        "mcpExtension.server.port": {
          "type": "number",
          "default": 8765,
          "description": "MCP HTTP server port"
        },
        "mcpExtension.server.timeout": {
          "type": "number",
          "default": 300000,
          "description": "MCP server timeout in milliseconds (default: 300000ms/5分钟)"
        },
        "mcpExtension.ui.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open AI Bridge panel when extension activates"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "node esbuild.config.js",
    "compile:prod": "node esbuild.config.js --production",
    "watch": "node esbuild.config.js --watch",
    "compile:tsc": "tsc -p ./",
    "watch:tsc": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest tests/server.test.ts",
    "test:watch": "jest tests/server.test.ts --watch",
    "test:coverage": "jest tests/server.test.ts --coverage",
    "test:all": "npm test",
    "package": "vsce package",
    "publish": "vsce publish",
    "package:dev": "vsce package --pre-release"
  },
  "devDependencies": {
    "@types/eventsource": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "22.x",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "eventsource": "^4.0.0",
    "jest": "^30.0.0",
    "node-fetch": "^3.3.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "undici": "^7.10.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "zod": "^3.25.64"
  }
}
