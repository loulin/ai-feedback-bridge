{
  "name": "mcp-interactive-extension",
  "displayName": "AI Feedback Bridge",
  "description": "Bridge between AI clients and VSCode for interactive feedback and real-time collaboration",
  "version": "1.0.0",
  "publisher": "loulin",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpExtension.start",
        "title": "Start MCP Server",
        "category": "AI Bridge"
      },
      {
        "command": "mcpExtension.stop",
        "title": "Stop MCP Server",
        "category": "AI Bridge"
      },
      {
        "command": "mcpExtension.openPanel",
        "title": "Open AI Bridge Panel",
        "category": "AI Bridge"
      },
      {
        "command": "mcpExtension.restart",
        "title": "Restart MCP Server",
        "category": "AI Bridge"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpContainer",
          "title": "AI Feedback Bridge",
          "icon": "$(plug)"
        }
      ]
    },
    "views": {
      "mcpContainer": [
        {
          "id": "mcpPanel",
          "name": "AI Interactive Panel",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "AI Feedback Bridge",
      "properties": {
        "mcpExtension.server.port": {
          "type": "number",
          "default": 8765,
          "description": "MCP HTTP server port"
        },
        "mcpExtension.server.timeout": {
          "type": "number",
          "default": 600000,
          "description": "MCP server timeout in milliseconds (default: 600000ms/10分钟)"
        },
        "mcpExtension.ui.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open AI Bridge panel when extension activates"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest tests/server.test.ts",
    "test:watch": "jest tests/server.test.ts --watch",
    "test:coverage": "jest tests/server.test.ts --coverage",
    "test:all": "npm test",
    "package": "vsce package",
    "publish": "vsce publish",
    "package:dev": "vsce package --pre-release"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "18.x",
    "@types/node-fetch": "^2.6.12",
    "@types/supertest": "^6.0.3",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "eventsource": "^4.0.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "undici": "^7.10.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "zod": "^3.23.8"
  }
}
